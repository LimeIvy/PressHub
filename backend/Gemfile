
# frozen_string_literal: true

source 'https://rubygems.org'

# Rails本体
gem 'rails', '~> 8.0.2', '>= 8.0.2.1'

# DB: PostgreSQL
gem 'pg', '~> 1.1'

# Webサーバー
gem 'puma', '>= 5.0'

# JSON API 用に ActionController::API を使う場合でも Rails 本体に必要
# jbuilder は API でも JSON レンダリングに使えるけど不要なら消してOK
# gem 'jbuilder'

# Active Storage（ファイルアップロード用）
gem 'image_processing', '~> 1.2'

# キャッシュやジョブ処理用（必須でなければ消せる）
gem 'solid_cache'
gem 'solid_queue'

# Boot 時の高速化
gem 'bootsnap', require: false

# Docker デプロイ用
gem 'kamal', require: false

# Puma のアセット配信最適化（必要なら）
gem 'thruster', require: false

# CORS 設定用（Next.js との接続に必須）
gem 'rack-cors'

# タイムゾーンデータ（Windowsなど）
gem 'tzinfo-data', platforms: %i[windows jruby]

group :development, :test do
  # デバッグ用
  gem 'debug', platforms: %i[mri windows], require: 'debug/prelude'

  # セキュリティ静的解析
  gem 'brakeman', require: false

  # Ruby コードスタイル自動チェック
  gem 'rubocop-rails-omakase', require: false
end

group :development do
  # Web コンソール（APIでもデバッグ用）
  gem 'web-console'
  gem 'rubocop', require: false
end

group :test do
  # システムテスト用
  gem 'capybara'
  gem 'selenium-webdriver'
end





















